# =============================================================================
# McLarens Analytics API - Production Environment Template
# =============================================================================
# IMPORTANT: Never commit this file with real secrets!

# Database
DATABASE_URL=postgresql+asyncpg://user:password@your-db-host:5432/maclarens_analytics

# Redis
REDIS_URL=redis://your-redis-host:6379

# Auth Mode: entra for production
AUTH_MODE=entra
JWT_SECRET=GENERATE-A-STRONG-SECRET-HERE

# Microsoft Entra ID (Azure AD)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Email via Microsoft Graph
EMAIL_ENABLED=true
EMAIL_PROVIDER=graph
GRAPH_SENDER_EMAIL=notifications@yourtenant.onmicrosoft.com
SENDER_EMAIL=no-reply@yourdomain.com

# App
DEBUG=false
ENVIRONMENT=production
APP_URL=https://your-production-domain.com
CORS_ORIGINS=["https://your-production-domain.com"]
