# =============================================================================
# McLarens Analytics API - Local Development Environment
# =============================================================================
# This is a DEV configuration file. DO NOT commit real secrets.

# Database (Docker)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/maclarens_analytics

# Redis
REDIS_URL=redis://localhost:6379

# Auth Mode: dev (local JWT) or entra (Microsoft Entra ID)
AUTH_MODE=dev
JWT_SECRET=maclarens-dev-secret-key-local
JWT_EXPIRATION_HOURS=24

# Email: mailhog (dev) or graph (prod)
EMAIL_ENABLED=true
EMAIL_PROVIDER=mailhog
SMTP_HOST=localhost
SMTP_PORT=1025
SENDER_EMAIL=no-reply@maclarens.local

# App
DEBUG=true
ENVIRONMENT=development
APP_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
