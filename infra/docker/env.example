# ============================================
# McLarens Analytics - Docker Dev Environment
# ============================================
# Copy this file to .env in the same directory
# Values shown are defaults used by docker-compose.dev.yml

# ─── Database ───
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=maclarens_analytics

# ─── Backend ───
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/maclarens_analytics
REDIS_URL=redis://redis:6379
PYTHON_ENV=development
DEBUG=true
AUTH_MODE=dev
JWT_SECRET=maclarens-dev-secret-change-in-production

# ─── Email (Mailpit) ───
EMAIL_ENABLED=true
EMAIL_PROVIDER=mailpit
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USE_TLS=false
SENDER_EMAIL=no-reply@maclarens.local

# ─── Frontend ───
NEXT_PUBLIC_API_URL=http://localhost:8000/graphql
BACKEND_URL=http://backend:8000
NODE_ENV=development

# ─── CORS ───
CORS_ORIGINS=["http://localhost:3000", "http://frontend:3000"]
